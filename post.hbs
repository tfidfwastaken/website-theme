{{!< default}}

<main class="site-main">
    {{#post}}
    <article class="post">
        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
            <div class="post-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMMM YYYY"}}</time>

                {{#has tag="unpolished"}}
                    <span class="unpolished-tag"> · unpolished</span>
                {{/has}}
            </div>
        </header>

        {{#if feature_image}}
        <figure class="post-image">
            <img
                srcset="{{img_url feature_image size="s"}} 320w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 960w"
                sizes="(max-width: 640px) 100vw, 640px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            >
            {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>
        {{/if}}

        <section class="post-content gh-content">
            {{content}}
        </section>

        {{!-- Comments section --}}
        <section class="post-comments">
            {{comments title="Comments"}}
        </section>
        <script>
            // Set comments color scheme - default to light (matches main theme)
            (function() {
                var pref = localStorage.getItem('theme-preference');
                var scheme = pref === 'dark' ? 'dark' : 'light';
                var script = document.querySelector('[data-ghost-comments]');
                if (script) {
                    script.setAttribute('data-color-scheme', scheme);
                }
            })();
        </script>

        <footer class="post-footer">
            {{!-- Navigation to prev/next posts --}}
            <nav class="post-nav">
                {{#prev_post}}
                    <a href="{{url}}" class="prev-post">← {{title}}</a>
                {{/prev_post}}
                {{#next_post}}
                    <a href="{{url}}" class="next-post">{{title}} →</a>
                {{/next_post}}
            </nav>
        </footer>
    </article>
    {{/post}}
</main>

{{!< default}}

<main class="site-main author-archive">
    {{#author}}
    <header class="author-header">
        <h1 class="author-name">{{name}}</h1>
        {{#if bio}}
            <p class="author-bio">{{bio}}</p>
        {{/if}}
    </header>
    {{/author}}

    <ul class="post-list">
        {{#foreach posts}}
        <li class="post-item">
            <span class="post-item-title"><a href="{{url}}">{{title}}</a></span>
            <span class="post-item-date">{{date format="DD MMM YYYY"}}</span>
        </li>
        {{/foreach}}
    </ul>
</main>

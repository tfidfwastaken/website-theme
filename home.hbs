{{!< default}}

<main class="site-main home">
    {{!-- Site Title --}}
    <header class="home-header">
        <h1 class="site-title">{{@site.title}}</h1>
        {{#if @site.description}}
            <p class="site-description">{{@site.description}}</p>
        {{/if}}
    </header>

    {{!-- Latest Posts Section --}}
    <section class="home-section latest-section">
        <h2 class="section-title">Latest</h2>
        {{#get "posts" limit="7" filter="tag:-unpolished" include="tags" as |latestPosts|}}
        <ul class="post-list">
                {{#foreach latestPosts}}
                <li class="post-item">
                    <span class="post-item-title"><a href="{{url}}">{{title}}</a></span>
                    <span class="post-item-date">{{date format="D MMM YYYY"}}</span>
                </li>
                {{/foreach}}
        </ul>
        <a href="/posts/" class="view-all">View all posts â†’</a>
        {{/get}}
    </section>

    {{!-- Featured Posts Section --}}
    {{#get "posts" filter="featured:true" limit="all" as |featured|}}
        {{#if featured}}
        <section class="home-section featured-section">
            <h2 class="section-title">Featured</h2>
            <ul class="post-list featured-list">
                {{#foreach featured}}
                <li class="post-item featured">
                    <span class="post-item-title"><a href="{{url}}">{{title}}</a></span>
                </li>
                {{/foreach}}
            </ul>
        </section>
        {{/if}}
    {{/get}}

    {{!-- Unpolished Posts Section --}}
    {{#get "posts" limit="7" filter="tag:unpolished" as |unpolished|}}
        {{#if unpolished}}
        <section class="home-section unpolished-section">
            <h2 class="section-title">Unpolished</h2>
            <ul class="post-list">
                {{#foreach unpolished}}
                <li class="post-item">
                    <span class="post-item-title"><a href="{{url}}">{{title}}</a></span>
                    <span class="post-item-date">{{date format="D MMM YYYY"}}</span>
                </li>
                {{/foreach}}
            </ul>
        </section>
        {{/if}}
    {{/get}}

</main>
